# Environment Configuration for Next.js Application
# Copy this file to .env.local for local development
# For production, set these variables in your hosting platform

# Database Configuration
# For SQLite: file:./data/dev.db (local) or file:./data/prod.db (production)
# For PostgreSQL: postgresql://username:password@localhost:5432/database_name
DATABASE_URL=file:./data/dev.db

# Authentication Secrets
# Generate secure random strings for production use
JWT_SECRET=your-jwt-secret-key-here
NEXTAUTH_SECRET=your-nextauth-secret-here

# Application URL
# Set to your production URL in production environment
NEXTAUTH_URL=http://localhost:3000

# Render Platform API Key (if using Render services)
RENDER_API_KEY=your-render-api-key-here

# Node Environment
# Set to 'production' for production builds
NODE_ENV=development

# Optional: Port Configuration
# PORT=3000

# Optional: Host Configuration  
# HOSTNAME=0.0.0.0
